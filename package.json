{
  "name": "todo247-common",
  "version": "1.0.0",
  "description": "common todo247",
  "keywords": [
    "todo247",
    "@todo247",
    "247",
    "todo"
  ],
  "bugs": {
    "url": "https://github.com/develwares/sdk.todo247",
    "email": "cvisbal0724@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Develware",
    "email": "cvisbal0724@gmail.com"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rm -rf ./tsconfig.build.tsbuildinfo && tsc -p tsconfig.build.json && cp package.json dist/package.json && cp tsconfig.build.json dist/tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "security-local-m": "curl http://localhost:3001/api/models -o src/models-security.ts",
    "carrier-local-m": "curl http://localhost:3002/api/models -o src/models-carrier.ts",
    "security-local-d": "curl http://localhost:3001/api/dtos -o src/dto-security.ts",
    "carrier-local-d": "curl http://localhost:3002/api/dtos -o src/dto-carrier.ts"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}